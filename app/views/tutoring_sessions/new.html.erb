<h1>Add A New Session</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @session do |f| %>
      <!-- hidden_field allows for the student id to be passed from the params provided obtained from the student show view. Can be refactored if nested -->
      <%= f.hidden_field :student_id, :value => @student.id %>
      <div class="form-group">
        <%= f.label :session_date %>
        <%= f.text_field :session_date, class: 'form-control', placeholder: "StudentLastName_TutorLastName SessionEndDate" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
        <%= link_to "Cancel", :back, {:class=>"btn btn-danger"} %>
      </div>
    <% end %>
  </div>
</div>
<%= params.inspect %>
